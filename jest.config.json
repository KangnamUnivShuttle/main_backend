{
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t)sx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testRegex": "/tests\/\\w+\/\\w+.spec.ts",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts}",
      "!src/**/*.d.ts",
      "!src/**/server.ts",
      "!src/**/routes.ts"
    ],
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ]
}